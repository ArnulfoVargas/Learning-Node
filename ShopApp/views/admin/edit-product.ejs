    <%- include("../includes/head.ejs") %>
    <link rel="stylesheet" href="/add-product.css">
</head>

<body>
  <%- include("../includes/nav.ejs") %>
    <main>
        <form action="/admin/<% if (editing) { %>edit-product<% } else {%>add-product<%}%>" method="POST">
            <label for="product">Product Name: </label>
            <input type="text" name="product" id="product" value="<% if (editing) { %><%= product.title %><% } %>" required >
            
            </br>

            <label for="price">Product Price: </label>
            <input type="number" step="0.01" name="price" id="price" value="<% if (editing) { %><%= product.price %><% } %>" required>
           
            </br>

            <label for="image">Product Image URL: </label>
            <input type="text" name="image" id="image" value="<% if (editing) { %><%= product.imageUrl %><% } %>" required>

            </br>

            <label for="description">Product description: </label>
            </br>
            <textarea name="description" id="description" rows="4" cols="48" required><% if (editing) { %><%= product.description %><% } %></textarea>

            <% if (editing) { %>
            <input type="hidden" value="<%= product.id %>" name="productID" %> />
            <% } %>
            
            </br>
            <input type="submit" value="<% if (editing) { %>Update product<% } else { %>Add product<% } %>">
        </form>
    </main>
    <%- include("../includes/end.ejs") %>
